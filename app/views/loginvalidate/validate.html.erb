<div class="jumbotron text-center">
    <h1>Validate Username and Password</h1>  
    <h3><%= cookies[:player].nil? ? "New Player" : cookies[:player].capitalize %>! Let see if you can submit valid username and password</h3>
    <h5>Using Ruby to vaidate username and password.</h5>
</div>

<div class="row">
    <div class="col-sm-3 text-center col-sm-offset-2 well">
        <form action="/loginvalidate" method="get" class="form-horizontal">
            <div class="form-group">
                <label class="control-label">User Name: </label>
                <input type="text" name="username" class="form-control" autofocus/>
                <label class="control-label">Password: </label>
                <input type="text" name="pass" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-default">Validate</button>
        </form>
    </div>
    <div class="col-sm-3 text-center col-sm-offset-2">
        <div class="password_message">
            <p id="notice"><%= flash.now[:notice] %></p>
            <p id="alert"><%= flash.now[:alert] %></p>
        </div>
    </div>
</div>
