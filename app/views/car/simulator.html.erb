<div class="jumbotron text-center">
    <h1>You have <%= @car.get_car %></h1>  
    <h3><%= @car.get_description %></h3>
    <h5><%= cookies[:player].nil? ? "New Player" : cookies[:player].capitalize %>! Are you ready to play?</h5>
    
</div>
<div class="row">
    <div class="col-sm-4 text-center col-sm-offset-6 well">
        <form action="/car/simulator/carlight" method="get">
            <label>Toggle headlight: </label>
            <button type="submit" class="btn btn-default btn-lg"><%= @car.light ? "On" : "Off" %></button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 text-center">
        <i class="fa fa-car fa-5x"></i>
        <i class="fa fa-car fa-5x"></i>
        <i class="fa fa-car fa-5x"></i>
    </div>
    <div class="col-sm-2 text-center well">
        <label>Current speed: </label>
        <h2><%= @car.show_speed %></h2>
    </div>
    <div class="col-sm-2 text-center">
        <form action="/car/simulator/speedup" method="get">
            <button type="submit" class="btn btn-default btn-block">Accelerate</button>
        </form>
        <form action="/car/simulator/slowdown" method="get">
            <button type="submit" class="btn btn-default btn-block">Decelerate</button>
        </form>
        <form action="/car/simulator/parkingbrake" method="get">
            <input type="radio" name="parkingbrake" value="On"> ON
            <input type="radio" name="parkingbrake" value="Off"> OFF
            <button type="submit" class="btn btn-default btn-block">Parking Brake is <%= @car.get_parkingbrake ? "On" : "Off" %></button>
        </form>
    </div>
</div>